%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "content-type"}/
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %title components
    %link{:href => "css/bootstrap.css", :rel => "stylesheet", :type => "text/css"}/
    :css

  %body
    .container
      .page-header
        %h1 Panels
      .panel.panel-primary
        .panel-heading
          MAIN
        .panel-body
          .panel.panel-default
            .panel-heading
              ATTENTION
            .panel-body
              Hello Robin!
            .panel-footer
              %a.btn.btn-danger.btn-sm{:href => "#"} Agree
              %a.btn.btn-default.btn-sm{:href => "#"} Decline
          .panel.panel-success
            .panel-heading
              SUCCESS
            .panel-body
              You created a 'success' panel
            .panel-footer
              %a.btn.btn-success.btn-sm{:href => "#"} Agree
              %a.btn.btn-default.btn-sm{:href => "#"} Decline
        .panel-footer
          %a.btn.btn-primary.btn-sm{:href => "#"} Agree
          %a.btn.btn-default.btn-sm{:href => "#"} Decline
    %script{:src => "js/jquery.js"}
    %script{:src => "js/bootstrap.js"}
