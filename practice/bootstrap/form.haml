!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "content-type"}/
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %title form
    %link{:href => "css/bootstrap.css", :rel => "stylesheet", :type => "text/css"}/
    :css
      .btn-full {
          width: 100%;
      }
  %body
    .container
      .page-header
        %h1 Forms
      .page-header
        %h1 Vertical Form
      %form.form
        .form-group
          %label{:for => "nameField"} Name
          %input#nameField.form-control{:placeholder => "Your Name", :type => "text"}/
        .form-group
          %label{:for => "emailField"} Email
          %input#emailField.form-control{:placeholder => "Your Email", :type => "email"}/
        .form-group
          %label{:for => "phoneField"} Phone
          %input#phoneField.form-control{:placeholder => "Your Phone Number", :type => "text"}/
        .form-group
          %label{:for => "descField"} Description
          %textarea#descField.form-control{:placeholder => "Your Comments"}
        %button.btn.btn-primary.btn-full{:type => "submit"} Submit
        %button.btn.btn-default.btn-full{:type => "reset"} Reset
      .page-header
        %h1 Horizontal Form
      %form.form-horizontal
        .form-group
          %label.col-xs-2{:for => "nameField"} Name
          .col-xs-10
            %input#nameField.form-control{:placeholder => "Your Name", :type => "text"}/
        .form-group
          %label.col-xs-2{:for => "emailField"} Email
          .col-xs-10
            %input#emailField.form-control{:placeholder => "Your Email", :type => "email"}/
        .form-group
          %label.col-xs-2{:for => "phoneField"} Phone
          .col-xs-10
            %input#phoneField.form-control{:placeholder => "Your Phone Number", :type => "text"}/
        .form-group
          %label.col-xs-2{:for => "descField"} Description
          .col-xs-10
            %textarea#descField.form-control{:placeholder => "Your Comments"}
        .col-xs-10.col-xs-offset-2
          %button.btn.btn-primary{:type => "submit"} Submit
          %button.btn.btn-default{:type => "reset"} Reset
          .radio
            %label
              %input{:type => "radio", :value => "Remember"}/
              Remember Choices
      .page-header
        %h1 Inline Form
      .well.well-sm
        %form.form-inline
          .form-group
            %input#emailField.form-control{:placeholder => "Enter email", :type => "email"}/
          .form-group
            %input#passwordField.form-control{:placeholder => "Password", :type => "password"}/
          .checkbox
            %label
              %input{:type => "checkbox"}/
              Remember me
          %button.btn.btn-primary{:type => "submit"} Sign in
    %script{:src => "js/jquery.js"}
    %script{:src => "js/bootstrap.js"}
